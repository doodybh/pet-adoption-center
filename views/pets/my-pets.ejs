<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pets</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      .pet-card-img { height: 210px; object-fit: cover; }
    </style>
  </head>

  <body class="bg-light">
    <%- include("../navbar") %>

    <main class="container py-4">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">My Pets</h1>
      </div>

      <% if (!myPets || myPets.length == 0) { %>
      <div class="alert alert-secondary">You haven't listed any pets yet.</div>
      <% } %>

      <div class="row g-3">
        <% myPets.forEach(pet => { %>
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% if (pet.picture) { %>
            <img src="<%= pet.picture %>" class="card-img-top pet-card-img" alt="<%= pet.name %>" />
            <% } else { %>
            <div class="bg-secondary-subtle" style="height: 210px"></div>
            <% } %>

            <div class="card-body">
              <h5 class="card-title mb-1"><%= pet.name %></h5>
              <div class="text-muted small mb-2"><%= pet.category %></div>

              <div class="small mb-2">
                <strong>Age:</strong>
                <span data-dob="<%= pet.dob.toISOString().slice(0,10) %>">â€”</span>
              </div>

              <p class="card-text"><%= pet.description %></p>
            </div>

            <div class="card-footer bg-white border-0 pt-0 pb-3 px-3 d-flex gap-2">
              <a class="btn btn-outline-secondary w-100" href="/pets/<%= pet._id %>/edit">Edit</a>

              <button
                class="btn btn-danger w-100"
                type="button"
                data-bs-toggle="modal"
                data-bs-target="#deletePetModal-<%= pet._id %>"
              >
                Remove
              </button>
            </div>
          </div>
        </div>

        <div
          class="modal fade"
          id="deletePetModal-<%= pet._id %>"
          tabindex="-1"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Remove listing?</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                ></button>
              </div>

              <div class="modal-body">
                This will remove <b><%= pet.name %></b> from the listings.
              </div>

              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-outline-secondary"
                  data-bs-dismiss="modal"
                >
                  Cancel
                </button>

                <form
                  class="m-0"
                  action="/pets/<%= pet._id %>/delete"
                  method="POST"
                >
                  <button type="submit" class="btn btn-danger">
                    Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/forms.js"></script>
  </body>
</html>
