<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pets</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      .pet-card-img { height: 210px; object-fit: cover; }
    </style>
  </head>

  <body class="bg-light">
    <%- include("../navbar") %>

    <main class="container py-4">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Pets</h1>
      </div>

      <div class="row g-3">
        <% allPets.forEach(onePet => { %>
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% if (onePet.picture) { %>
            <img src="<%= onePet.picture %>" class="card-img-top pet-card-img" alt="<%= onePet.name %>" />
            <% } else { %>
            <div class="bg-secondary-subtle" style="height: 210px"></div>
            <% } %>

            <div class="card-body">
              <h5 class="card-title mb-1"><%= onePet.name %></h5>
              <div class="text-muted small mb-2"><%= onePet.category %></div>

              <div class="small mb-2">
                <strong>Age:</strong>
                <span data-dob="<%= onePet.dob.toISOString().slice(0,10) %>">â€”</span>
              </div>

              <p class="card-text"><%= onePet.description %></p>
            </div>

            <div class="card-footer bg-white border-0 pt-0 pb-3 px-3">
              <a class="btn btn-outline-primary w-100" href="/pets/<%= onePet._id %>">View details</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/forms.js"></script>
  </body>
</html>
