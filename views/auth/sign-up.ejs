<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-light">
    <%- include("../navbar") %>

    <main class="container py-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
          <div class="card shadow-sm">
            <div class="card-body p-4">
              <h1 class="h4 mb-3">Create account</h1>

              <form
                action="/auth/sign-up"
                method="POST"
                class="needs-validation"
                novalidate
              >
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input
                    class="form-control"
                    type="email"
                    name="email"
                    required
                    pattern="^[a-zA-Z0-9]+(\.[a-zA-Z0-9]+)?@[a-zA-Z0-9]+(-[a-zA-Z0-9]+)?\.[a-zA-Z]{2,3}(\.[a-zA-Z]{2,3})?$"
                    data-msg-required="Please enter your email."
                    data-msg-type="Please enter a valid email address."
                    data-msg-pattern="Please enter a valid email address."
                  />
                  <div class="invalid-feedback"></div>
                </div>

                <div class="mb-3">
                  <label class="form-label">Username</label>
                  <input
                    class="form-control"
                    type="text"
                    name="username"
                    required
                    minlength="3"
                    maxlength="20"
                    data-msg-required="Please choose a username."
                    data-msg-min="Username must be at least 3 characters."
                    data-msg-max="Username must be 20 characters or less."
                  />
                  <div class="invalid-feedback"></div>
                </div>

                <div class="mb-3">
                  <label class="form-label">Password</label>
                  <input
                    class="form-control"
                    type="password"
                    name="password"
                    required
                    minlength="8"
                    maxlength="64"
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).*$"
                    data-msg-required="Please create a password."
                    data-msg-min="Password must be at least 8 characters."
                    data-msg-max="Password must be 64 characters or less."
                    data-msg-pattern="Password must include uppercase, lowercase, a number, and a special character."
                  />
                  <div class="invalid-feedback"></div>
                </div>

                <div class="mb-3">
                  <label class="form-label">Confirm Password</label>
                  <input
                    class="form-control"
                    type="password"
                    name="confirmPassword"
                    required
                    data-msg-required="Please confirm your password."
                  />
                  <div class="invalid-feedback"></div>
                </div>

                <div class="mb-3">
                  <label class="form-label">Phone Number</label>

                  <div class="input-group has-validation">
                    <span class="input-group-text">+973</span>
                    <input
                      class="form-control"
                      type="tel"
                      name="phoneNumber"
                      required
                      pattern="^\d{8}$"
                      data-msg-required="Please enter your phone number."
                      data-msg-pattern="Phone number must be exactly 8 digits."
                    />
                    <div class="invalid-feedback"></div>
                  </div>
                </div>

                <button class="btn btn-primary w-100" type="submit">
                  Sign up
                </button>
              </form>

              <p class="text-muted mt-3 mb-0">
                Already have an account?
                <a href="/auth/sign-in">Sign in</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/forms.js"></script>
  </body>
</html>
